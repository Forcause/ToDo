<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoClient.View.ManageToDoView"
             xmlns:viewModel="clr-namespace:ToDoClient.ViewModel"
             x:DataType="viewModel:ManageToDoViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="*, Auto" ColumnDefinitions="*,*,*" ColumnSpacing="5" Margin="10,0,10,20">
        
        <TableView Intent="Data" Grid.Row="0" Grid.ColumnSpan="3">
            <TableRoot Title="Manage your ToDo">
                <TableSection>
                    <EntryCell Text="{Binding SelectedToDo.ToDoName}" Placeholder="Name"/>
                    <EntryCell Text="{Binding SelectedToDo.ToDoDescription}" Placeholder="Description"/>
                </TableSection>
            </TableRoot>
        </TableView>
        
        <Button Text="Save" Grid.Row="1" Grid.Column="0"/>
        <Button Text="Delete" Grid.Row="1" Grid.Column="1"/>
        <Button Text="Cancel" Grid.Row="1" Grid.Column="2"  Command="{Binding ReturnCommand}"/>
        
    </Grid>

</ContentPage>